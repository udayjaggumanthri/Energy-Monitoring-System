		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.tokens) {",
									"        pm.environment.set('access_token', jsonData.tokens.access);",
									"        pm.environment.set('refresh_token', jsonData.tokens.refresh);",
									"        pm.environment.set('current_user_role', jsonData.user.role);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email_or_mobile\": \"superadmin@example.com\",\n  \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login/",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login", ""]
						},
						"description": "Login with email/mobile and password. Saves access_token and refresh_token to environment."
					},
					"response": []
				},
				{
					"name": "Register User (Super Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{super_admin_token}}",
								"description": "Super Admin token required"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newadmin\",\n  \"email\": \"newadmin@example.com\",\n  \"password\": \"password123\",\n  \"password_confirm\": \"password123\",\n  \"mobile\": \"1234567890\",\n  \"role\": \"admin\",\n  \"first_name\": \"New\",\n  \"last_name\": \"Admin\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register", ""]
						},
						"description": "Register new user. Super Admin can create: super_admin, admin, user. Admin can create: user only."
					},
					"response": []
				},
				{
					"name": "Register User (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"description": "Admin token - can only create User"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"password_confirm\": \"password123\",\n  \"role\": \"user\",\n  \"first_name\": \"New\",\n  \"last_name\": \"User\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register", ""]
						},
						"description": "Admin can only register User accounts"
					},
					"response": []
				},
